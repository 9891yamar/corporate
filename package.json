{
    "name": "vike-ssr-corporate",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vike dev",
        "build": "vike build",
        "preview": "vike preview",
        "storybook": "ladle serve",
        "build-storybook": "ladle build",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint:css": "stylelint \"**/*.css\" --fix",
        "lint:css:check": "stylelint \"**/*.css\"",
        "docker:build": "docker build -t corporate-site .",
        "docker:run": "docker run -p 3000:3000 corporate-site",
        "docker:dev": "docker-compose up corporate-dev",
        "docker:prod": "docker-compose up corporate-site -d",
        "docker:stop": "docker-compose down",
        "docker:clean": "docker system prune -f"
    },
    "dependencies": {
        "modern-normalize": "^3.0.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "vike": "^0.4.235",
        "vike-react": "^0.6.4"
    },
    "devDependencies": {
        "@ladle/react": "^5.0.3",
        "@types/node": "^20.19.1",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.6.0",
        "autoprefixer": "^10.4.19",
        "postcss": "^8.4.38",
        "postcss-import": "^16.1.0",
        "postcss-nested": "^6.2.0",
        "postcss-preset-env": "^9.5.0",
        "prettier": "^3.3.3",
        "stylelint": "^16.6.1",
        "stylelint-config-standard": "^36.0.1",
        "typescript": "^5.8.3",
        "vite": "^6.3.5"
    }
}
