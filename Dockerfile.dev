FROM node:20-alpine

WORKDIR /app

# Install specific pnpm version
RUN npm install -g pnpm@8.9.2

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install all dependencies (including dev dependencies)
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 3000

# Start development server
CMD ["pnpm", "dev"]
